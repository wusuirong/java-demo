<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath*:applicationContext-dao.xml,
			classpath*:applicationContext-mapper.xml,
			classpath*:applicationContext-service.xml,
			classpath*:applicationContext-remote.xml
		</param-value>
	</context-param>
<!--
	<listener>
		<listener-class>net.mikoo.eacms.base.listener.MemberSessionListener</listener-class>
	</listener>
	<listener>
		<listener-class>net.mikoo.eacms.base.listener.LogoutSessionListener</listener-class>
	</listener>
-->	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
